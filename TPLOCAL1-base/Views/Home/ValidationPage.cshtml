@model TPLOCAL1.Models.FormModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Validation - TP LOCAL</title>
    <link rel="stylesheet" href="~/resources/Index.css" />
</head>
<body>
    <header>
        <img src="~/resources/GroupeHN.png" class="image" alt="GroupeHN" />
        <h1>Page de validation</h1>
    </header>

    <nav>
        <ul>
            <li><a href="/Home/Index">Accueil</a></li>
            <li><a href="/Home/Index/AvisList">Liste avis</a></li>
        </ul>
    </nav>

    <section>
        <h3>Votre formulaire a bien été pris en compte</h3>

        <table>
            <thead>
                <tr>
                    <th colspan="2">Informations personnelles</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Nom</td>
                    <td>@Model.Nom</td>
                </tr>
                <tr>
                    <td>Prénom</td>
                    <td>@Model.Prenom</td>
                </tr>
                <tr>
                    <td>Sexe</td>
                    <td>@Model.Sexe</td>
                </tr>
                <tr>
                    <td>Adresse</td>
                    <td>@Model.Adresse</td>
                </tr>
                <tr>
                    <td>Code Postal</td>
                    <td>@Model.CodePostal</td>
                </tr>
                <tr>
                    <td>Ville</td>
                    <td>@Model.Ville</td>
                </tr>
                <tr>
                    <td>Email</td>
                    <td>@Model.Email</td>
                </tr>
            </tbody>
        </table>
        <br />

        <table>
            <thead>
                <tr>
                    <th colspan="2">Informations de formation suivie</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Date de début de la formation</td>
                    <td>@Model.DateDebutFormation.ToString("dd/MM/yyyy")</td>
                </tr>
                <tr>
                    <td>Type de formation</td>
                    <td>@Model.TypeFormation</td>
                </tr>
            </tbody>
        </table>
        <br />

        <table>
            <thead>
                <tr>
                    <th colspan="2">Avis sur la formation</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Avis sur la formation Cobol</td>
                    <td>@Model.AvisCobol</td>
                </tr>
                <tr>
                    <td>Avis sur la formation C#</td>
                    <td>@Model.AvisCSharp</td>
                </tr>
            </tbody>
        </table>
    </section>

</body>
</html>