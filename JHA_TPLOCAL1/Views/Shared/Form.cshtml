@model TPLOCAL1.Models.FormModel

@{
    ViewData["Title"] = "Formulaire";
    ViewData["PageTitle"] = "Formulaire TP HN avis";
}

<form asp-controller="Home" asp-action="ValidationForm" method="post">

    <!-- Affiche un résumé de toutes les erreurs de validation (Bonus 1) -->
    <div asp-validation-summary="All" class="text-danger"></div>

    <!-- ===== TABLEAU 1: INFORMATIONS PERSONNELLES ===== -->
    <table>
        <thead>
            <tr>
                <th colspan="2">Informations personnelles</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><label asp-for="Nom"></label></td>
                <td>
                    <input asp-for="Nom" />
                    <span asp-validation-for="Nom" class="field-validation-error"></span>
                </td>
            </tr>
            <tr>
                <td><label asp-for="Prenom"></label></td>
                <td>
                    <input asp-for="Prenom" />
                </td>
            </tr>
            <tr>
                <td><label asp-for="Sexe"></label></td>
                <td>
                    <select asp-for="Sexe">
                        <option value="">Sélectionnez un sexe</option>
                        <option value="Homme">Homme</option>
                        <option value="Femme">Femme</option>
                        <option value="Autre">Autre</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td><label asp-for="Adresse"></label></td>
                <td>
                    <input asp-for="Adresse" />
                </td>
            </tr>
            <tr>
                <td><label asp-for="CodePostal"></label></td>
                <td>
                    <input asp-for="CodePostal" />
                    <span asp-validation-for="CodePostal" class="field-validation-error"></span>
                </td>
            </tr>
            <tr>
                <td><label asp-for="Ville"></label></td>
                <td>
                    <input asp-for="Ville" />
                </td>
            </tr>
            <tr>
                <td><label asp-for="Email"></label></td>
                <td>
                    <input asp-for="Email" />
                    <span asp-validation-for="Email" class="field-validation-error"></span>
                </td>
            </tr>
        </tbody>
    </table>

    <br />

    <!-- ===== TABLEAU 2: INFORMATIONS DE FORMATION SUIVIE ===== -->
    <table>
        <thead>
            <tr>
                <th colspan="2">Informations de formation suivie</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><label asp-for="DateDebutFormation"></label></td>
                <td>
                    <input asp-for="DateDebutFormation" />
                </td>
            </tr>
            <tr>
                <td><label asp-for="TypeFormation"></label></td>
                <td>
                    <select asp-for="TypeFormation">
                        <option value="">Sélectionnez une formation</option>
                        <option value="Formation Cobol">Formation Cobol</option>
                        <option value="Formation par objet">Formation par objet</option>
                        <option value="Formation à double compétence">Formation à double compétence</option>
                    </select>
                </td>
            </tr>
        </tbody>
    </table>

    <br />

    <!-- ===== TABLEAU 3: AVIS SUR LA FORMATION ===== -->
    <table>
        <thead>
            <tr>
                <th colspan="2">Avis sur la formation</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><label asp-for="AvisCobol"></label></td>
                <td>
                    <input asp-for="AvisCobol" />
                </td>
            </tr>
            <tr>
                <td><label asp-for="AvisCSharp"></label></td>
                <td>
                    <input asp-for="AvisCSharp" />
                </td>
            </tr>
        </tbody>
    </table>

    <br />

    <button type="submit">Valider</button>
</form>